@Article{Garrity2011,
  Title                    = {Disentangling the relationships between plant pigments and the photochemical reflectance index reveals a new approach for remote estimation of carotenoid content},
  Author                   = {Steven R. Garrity and Jan U.H. Eitel and Lee A. Vierling},
  Journal                  = {Remote Sensing of Environment},
  Year                     = {2011},
