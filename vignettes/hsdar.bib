@Article{CHAPPELLE1992,
  Title                    = {Ratio Analysis of Reflectance Spectra (rars) - {A}n Algorithm For the Remote Estimation of the Concentrations of Chlorophyll-a, Chlorophyll-b, and Carotenoids In Soybean Leaves},
  Author                   = {Chappelle, E. W. and Kim, M. S. and Mcmurtrey, J. E.},
